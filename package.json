{
  "name": "node-rfc",
  "version": "2.7.1",
  "description": "nodejs bindings for SAP NW RFC SDK",
  "keywords": [
    "sap",
    "rfc",
    "rfc sdk",
    "sapnwrfc",
    "sapnw",
    "node",
    "nodejs"
  ],
  "homepage": "https://github.com/sap/node-rfc",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sap/node-rfc.git"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "Srdjan Boskovic",
    "email": "srdjan.boskovic@sap.com"
  },
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "directories": {
    "doc": "doc",
    "test": "test"
  },
  "files": [
    "prebuilds",
    "src",
    "CMakeLists.txt",
    "tsconfig.json"
  ],
  "scripts": {
    "install": "node-gyp-build",
    "lint": "npm run lintts && npm run lintcpp",
    "lintcpp": "cppcheck -I node_modules/node-addon_api --enable=all --inline-suppr src/cpp",
    "lintts": "eslint src/ts/wrapper --ext ts",
    "cpp": "prebuildify --napi --force --strip --verbose",
    "ts": "tsc",
    "jest": "jest --testPathIgnorePatterns throughput --testTimeout 30000",
    "test": "npm audit --omit=dev && reuse lint && jest --testPathIgnorePatterns throughput --testTimeout 30000"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "bluebird": "^3.7.2",
    "decimal.js": "^10.4.3",
    "node-addon-api": "^6.1.0",
    "node-gyp-build": "^4.6.0"
  },
  "devDependencies": {
    "@babel/core": "^7.21.3",
    "@tsconfig/node16": "^1.0.3",
    "@types/bluebird": "^3.5.38",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "async": "^3.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "jest": "^29.5.0",
    "prebuildify": "^5.0.1",
    "random-bytes": "^1.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
